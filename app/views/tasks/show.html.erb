<h1>タスク詳細画面</h1>
<p><%= t('view.name') %>: <%= @task.name %></p>
<p><%= t('view.detail') %>：<%= @task.detail %></p>
<p><%= t('view.deadline') %>：<%= @task.deadline.strftime('%Y年%m月%d日') %></p>
<p><%= t('view.situation') %>：<%= @task.situation %></p>
<p><%= t('view.priority') %>：<%= @task.priority %></p>

<%= link_to "ブログ一覧画面に戻る", tasks_path, class:"btn btn-light mt-3 mb-3" %>
