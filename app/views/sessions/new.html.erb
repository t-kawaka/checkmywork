<div class="container col-8 offset-2">
<h1>ログイン</h1>
<div class: "flash_message alert alert-success">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}, alert alert-success") %>
  <% end %>
</div>
<%= form_with scope: :session, local: true do |f| %>
  <div class="form-group mt-2">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email, class:"form-control", id: "session_email", placeholder: "メールアドレスの入力箇所です" %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class:"form-control", id: "session_password", placeholder: "パスワードの入力箇所です" %>
  </div>
  <div class="action">
    <%= f.submit 'ログインする', class:"btn btn-primary" %>
  </div>
<% end %>
</div>
